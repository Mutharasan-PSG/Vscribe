<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TASKS HISTORY"
        android:fontFamily="@font/poppins_medium"
        android:textSize="26sp"
        android:textColor="@color/BLUE"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <!-- Delete History Button -->
    <ImageButton
        android:id="@+id/btn_delete_history"
        android:layout_width="23dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="19dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/delete"
        android:textColor="@android:color/white" />

    <!-- History ListView -->
    <ListView
        android:id="@+id/list_view_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/history_task"
        />

    <TextView
        android:id="@+id/text_view_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History of tasks will appear here"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <!-- Speech Button -->
    <ImageButton
        android:id="@+id/btn_speech"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:contentDescription="Speech Button"
        android:scaleType="fitCenter"
        android:src="@drawable/mic" />

</RelativeLayout>
