<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/V_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOICE TO-DO LIST"
        android:fontFamily="@font/poppins_medium"
        android:textSize="26sp"
        android:textColor="@color/BLUE"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        />

    <EditText
        android:id="@+id/edit_text_task"
        android:layout_below="@+id/V_todo"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_height="wrap_content"
        android:hint="Enter task" />

    <Button
        android:id="@+id/button_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/edit_text_task" />

    <ListView
        android:id="@+id/list_view_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"

        android:layout_below="@id/button_add_task" />

    <ImageButton
        android:id="@+id/btn_speech"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:contentDescription="Speech Button"
        android:scaleType="fitCenter"
        android:src="@drawable/mic" />

</RelativeLayout>
