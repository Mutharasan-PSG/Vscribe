<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/V_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOICE TO-DO LIST"
        android:fontFamily="@font/poppins_medium"
        android:textSize="26sp"
        android:textColor="@color/BLUE"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <!-- History Button -->
    <ImageButton
        android:id="@+id/btn_history"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:contentDescription="History Button"
        android:src="@drawable/history"
        android:scaleType="fitXY"/>


    <ListView
        android:id="@+id/list_view_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_margin="7dp"
        android:layout_below="@id/V_todo"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"/>

    <!-- Add this to your activity_voice_to_do_list.xml layout file -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task will appear here"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btn_speech"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:contentDescription="Speech Button"
        android:scaleType="fitCenter"
        android:src="@drawable/mic" />

</RelativeLayout>
