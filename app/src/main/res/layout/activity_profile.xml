<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:layout_marginStart="20dp"
        android:textSize="24sp"
        android:textColor="@color/BLUE"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/Profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_default_profile_image"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_background"/>

    <TextView
        android:id="@+id/profile_name_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="19sp"
        android:textColor="@color/BLUE"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name_placeholder"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Actual Name"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/profile_email_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="19sp"
        android:textColor="@color/BLUE"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_email_placeholder"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="user@example.com"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="Sign Out" />

    <ImageButton
        android:id="@+id/btn_speech"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:background="@null"
        android:contentDescription="Speech Button"
        android:scaleType="fitCenter"
        android:src="@drawable/mic" />
</RelativeLayout>
